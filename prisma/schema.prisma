generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  fullName    String
  email       String   @unique
  password    String
  location    String
  phoneNumber String
  role        Role     @default(user)

  @@map("users")
}

enum Role {
  user
  admin
  owner
}

