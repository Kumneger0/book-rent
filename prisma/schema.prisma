generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookStatus {
  rented
  free
}

enum Category {
  fiction
  selfHelp
  business
}

enum Role {
  user
  admin
  owner
}

model User {
  id          Int    @id @default(autoincrement())
  fullName    String
  email       String @unique
  password    String
  location    String
  phoneNumber String
  Book        Book[]
  role        Role   @default(user)
  approved    Boolean  @default(false)
  isActive   Boolean  @default(true)

  @@map("users")
}

model Book {
  id         Int        @id @default(autoincrement())
  bookNo     String     @unique
  author     String
  owner      User       @relation(fields: [ownerId], references: [id])
  ownerId    Int
  isApproved Boolean    @default(false)
  bookName   String
  status     BookStatus @default(free)
  category   Category
  price      Int

  @@map("books")
}
